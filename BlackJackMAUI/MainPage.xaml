<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlackJackMAUI.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Text="wynik_krupiera"
            HorizontalOptions="Center" />
        <HorizontalStackLayout 
            Grid.Row="1"
            Grid.Column="0"
            x:Name="DealerCardsHLayout">
        </HorizontalStackLayout>
        <Button
            Grid.Row="2"
            Grid.Column="0"
            x:Name="StartGameButton"
            Text="Nowa gra"
            Clicked="NewGame"
            HorizontalOptions="Fill" />
        <HorizontalStackLayout 
            Grid.Row="3"
            Grid.Column="0"
            x:Name="PlayerCardsHLayout">
        </HorizontalStackLayout>
        <Label
            Grid.Row="4"
            Grid.Column="0"
            Text="wynik gracza"
            HorizontalOptions="Center" />
    </Grid>


</ContentPage>
